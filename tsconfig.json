{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "isolatedModules": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "noImplicitAny": true,
    "removeComments": false,
    "noLib": true,
    "preserveConstEnums": true,
    "suppressImplicitAnyIndexErrors": true,
    "rootDir": "./src/polymer-expressions",
    "outDir": "lib/"
  },
  "filesGlob": [
    "!node_modules/**",
    "node_modules/typescript/lib/lib.core.es6.d.ts",
    "custom_typings/*.d.ts",
    "typings/main/*.d.ts",
    "typings/main.d.ts",
    "src/**/*.ts"
  ],
  "files": [
    "node_modules/typescript/lib/lib.core.es6.d.ts",
    "custom_typings/node.d.ts",
    "src/polymer-expressions/ast_factory.ts",
    "src/polymer-expressions/eval.ts",
    "src/polymer-expressions/parser.ts"
  ],
  "atom": {
    "rewriteTsconfig": true,
    "compileOnSave": false
  }
}
